<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaperprincipal"
    tools:context=".MainActivity2Nivel2">

  <TextView
      android:id="@+id/textViewNombre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="32dp"
      android:text="@string/jugador"
      android:textColor="@android:color/background_dark"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="68dp"
      android:text="@string/totalscore"
      android:textColor="@android:color/background_dark"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewApple"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="112dp"
      android:text="@string/vidas"
      android:textColor="@android:color/background_dark"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageViewVidas"
      android:layout_width="80dp"
      android:layout_height="25dp"
      android:layout_marginStart="112dp"
      android:layout_marginTop="108dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/tresvidas" />

  <ImageView
      android:id="@+id/imageViewnumber1"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="160dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/cero" />

  <ImageView
      android:id="@+id/imageViewsigno"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginTop="160dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/adicion" />

  <ImageView
      android:id="@+id/imageViewnumber2"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginTop="160dp"
      android:layout_marginEnd="16dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/cero" />

  <EditText
      android:id="@+id/editTextNumberResult"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="251dp"
      android:autofillHints=""
      android:ems="10"
      android:hint="@string/respuesta"
      android:inputType="number"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/button2" />

  <Button
      android:id="@+id/button2"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:layout_marginEnd="7dp"
      android:layout_marginBottom="251dp"
      android:background="@drawable/fondoboton"
      android:onClick="comparar"
      android:text="@string/botonsumar"
      android:textColor="@android:color/background_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>